{
  "name": "rollup-plugin-eslint-bundle",
  "version": "7.0.0",
  "description": "Rollup plugin to verify (and fix) bundled code with ESLint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikolay-borzov/rollup-plugin-eslint-bundle.git"
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "eslint"
  ],
  "author": {
    "name": "Nikolay Borzov",
    "email": "nikolay.n.borzov@gmail.com"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    "import": "./index.js",
    "require": "./dist/index.cjs"
  },
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "c8 ava",
    "test:watch": "ava --watch",
    "test:coverage:collect": "c8 --include src/** --all --reporter=text --reporter=lcov ava",
    "test:coverage:view": "npx open-cli coverage\\lcov-report\\index.html",
    "build": "babel index.js --out-file dist/index.cjs",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false
  },
  "ava": {
    "verbose": true,
    "workerThreads": false,
    "files": [
      "./tests/tests.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.17.10",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/eslint": "^8.4.2",
    "ava": "^4.2.0",
    "c8": "^7.11.2",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "open-cli": "^7.0.1",
    "prettier": "^2.6.2",
    "prettier-config-standard": "^5.0.0",
    "rollup": "^2.72.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "diff": "^5.0.0",
    "magic-string": "^0.26.1"
  },
  "peerDependencies": {
    "eslint": ">=8.x",
    "rollup": "2.x"
  }
}
